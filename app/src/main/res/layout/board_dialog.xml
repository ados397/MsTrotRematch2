<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <RelativeLayout
            android:id="@+id/layout_notice_title"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="100dp"
                android:layout_height="135dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/like" />
            <TextView
                android:id="@+id/text_title"
                android:text="게시글 제목"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:layout_toRightOf="@+id/img_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_name"
                android:text="홍길동"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/img_profile"
                android:layout_below="@+id/text_title"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_time"
                android:text="0000-00-00 00:00"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/text_name"
                android:layout_below="@+id/text_title"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_like"
                android:src="@drawable/like24"
                android:layout_below="@id/text_name"
                android:layout_toRightOf="@+id/img_profile"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/text_like_count"
                android:text="0000"
                android:textSize="18sp"
                android:textColor="#0097CE"
                android:layout_below="@id/text_name"
                android:layout_toRightOf="@+id/img_like"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_dislike"
                android:src="@drawable/dislike24"
                android:layout_below="@id/text_name"
                android:layout_toRightOf="@+id/text_like_count"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/text_dislike_count"
                android:text="0000"
                android:textSize="14sp"
                android:textColor="#EF2AC1"
                android:layout_below="@id/text_name"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/img_dislike"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#929292"
                android:layout_below="@+id/img_profile"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>



        <TextView
            android:id="@+id/text_content"
            android:text="게시글 내용"
            android:textSize="12sp"
            android:scrollbars="vertical"
            android:linksClickable="true"
            android:autoLink="web"
            android:layout_below="@+id/layout_notice_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:background="#5244CD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/button_report"
            android:text="신고"
            android:textColor="#ddffffff"
            android:background="@drawable/btn_round"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <Button
            android:id="@+id/button_delete"
            android:text="삭제"
            android:textColor="#ddffffff"
            android:background="@drawable/btn_round"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <Button
            android:id="@+id/button_cancel"
            android:text="닫기"
            android:textColor="#ddffffff"
            android:background="@drawable/btn_round"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
    </LinearLayout>


</LinearLayout>