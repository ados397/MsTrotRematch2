<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vote_item_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/text_name"
        android:text="이름"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:maxLines="1"
        android:background="@drawable/btn_half_top_round"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_profile"
        android:src="@mipmap/ic_launcher"
        android:background="@color/card_view_3"
        android:adjustViewBounds="true"
        android:layout_weight="7.8"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_count"
        android:text="1,000"
        android:textColor="@color/display_board_6"
        android:textStyle="bold"
        android:textSize="14dp"
        android:maxLines="1"
        android:background="@drawable/btn_half_bottom_round"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>